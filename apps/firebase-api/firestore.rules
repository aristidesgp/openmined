rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isLoggedIn() {
      return request.auth != null;
    }

    match /users/{user} {
      function isSameUser() {
        return isLoggedIn() && request.auth.uid == user;
      }

      allow read;
      allow write: if isSameUser()

      match /private/{privateUserVar} {
        allow read, write: if isSameUser()
      }

      match /feedback/{conceptOrLesson} {
        allow read, write: if isSameUser()
      }

      match /courses/{course} {
        allow read, write: if isSameUser()

        match /submissions/{submission} {
          allow read, create: if isSameUser()
        }
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
